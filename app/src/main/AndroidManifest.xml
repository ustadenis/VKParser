<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.vkparser.vkparser">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".common.BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".screens.loginscreen.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.vk.sdk.VKServiceActivity"
            android:label="ServiceActivity"
            android:theme="@style/VK.Transparent" />

        <activity
            android:name=".screens.searchscreen.SearchActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".screens.ParsingActivity"
            android:label="@string/title_activity_parsing"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".screens.GropesSearchActivity"
            android:label="@string/title_activity_gropes_search"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>

</manifest>